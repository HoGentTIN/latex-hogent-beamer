%--------------------------------------------------------------------------
% Lettertypes
%--------------------------------------------------------------------------

\usefonttheme{professionalfonts}

\setsansfont{Montserrat}
\setmonofont{Fira Code}
\setmathrm{Montserrat}
\setmathsf{Montserrat}
\setboldmathrm{Montserrat ExtraBold}

\setbeamerfont{title}{series=\bfseries, size=\Huge}
\setbeamerfont{subtitle}{series=\bfseries, size=\large}
\setbeamerfont{frametitle}{series=\bfseries, size=\Huge}
%\setbeamerfont{}

%--------------------------------------------------------------------------
% ``Outer'' templates
%--------------------------------------------------------------------------

\setbeamertemplate{title page}{%
  \begin{beamercolorbox}[wd=\paperwidth, ht=.8\textheight, leftskip=1cm]{title page header}
    \usebeamerfont{title}\usebeamercolor{title}\inserttitle \\%
    \usebeamerfont{subtitle}\usebeamercolor{subtitle}\insertsubtitle%
    
    \bigskip\bigskip\bigskip\bigskip
    
    \usebeamerfont{framesubtitle}\insertauthor%
    
    \insertdate
  \end{beamercolorbox}%
}

% Voeg een titeldia toe bij het begin van een nieuwe sectie
\AtBeginSection[] % Do nothing for \section*
{
  \begin{frame}<beamer>
  
% Experiment voor letter met ``geclipte'' foto in de achtergrond
%  \begin{tikzpicture}[remember picture, overlay]
